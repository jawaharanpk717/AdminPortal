		return customer;
	}
 
	@Transactional
	public AgentEntity updateCustomer(AgentEntity customer) {
		admindao.addAgent(AgentEntity);
		return customer;
	}
 
	@Transactional
	public void deleteCustomer(int id) {
		customerDao.deleteCustomer(id);
	}
	
	
	
	
}
